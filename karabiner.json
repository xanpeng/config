{
    "title": "key settings for xan",
    "rules":
    [
        {
            "description": "change left_option-HJKL to arrows",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": { "mandatory": ["left_option"] }
                    },
                    "to": [{ "key_code": "left_arrow" }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "l",
                        "modifiers": { "mandatory": ["left_option"] }
                    },
                    "to": [{ "key_code": "right_arrow" }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": { "mandatory": ["left_option"] }
                    },
                    "to": [{ "key_code": "up_arrow" }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": { "mandatory": ["left_option"] }
                    },
                    "to": [{ "key_code": "down_arrow" }]
                }
            ]
        },

        {
            "description": "settings for terminal",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": { "mandatory": ["left_command"] }
                    },
                    "to": [{
                        "key_code": "f",
                        "modifiers": ["left_control"]
                    }],
                    "conditions": [{
                        "type": "frontmost_application_if",
                        "bundle_identifiers": ["^com\\.apple\\.Terminal$"]
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "d",
                        "modifiers": { "mandatory": ["left_command"] }
                    },
                    "to": [{
                        "key_code": "d",
                        "modifiers": ["left_control"]
                    }],
                    "conditions": [{
                        "type": "frontmost_application_if",
                        "bundle_identifiers": ["^com\\.apple\\.Terminal$"]
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "w",
                        "modifiers": { "mandatory": ["left_command"] }
                    },
                    "to": [{
                        "key_code": "w",
                        "modifiers": ["left_control"]
                    }],
                    "conditions": [{
                        "type": "frontmost_application_if",
                        "bundle_identifiers": ["^com\\.apple\\.Terminal$"]
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "e",
                        "modifiers": { "mandatory": ["left_command"] }
                    },
                    "to": [{
                        "key_code": "e",
                        "modifiers": ["left_control"]
                    }],
                    "conditions": [{
                        "type": "frontmost_application_if",
                        "bundle_identifiers": ["^com\\.apple\\.Terminal$"]
                    }]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "a",
                        "modifiers": { "mandatory": ["left_command"] }
                    },
                    "to": [{
                        "key_code": "a",
                        "modifiers": ["left_control"]
                    }],
                    "conditions": [{
                        "type": "frontmost_application_if",
                        "bundle_identifiers": ["^com\\.apple\\.Terminal$"]
                    }]
                }
            ]
        }

    ]
}
